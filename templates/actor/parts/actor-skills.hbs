{{#each skillSets as |skillSet key|}}
  <ol class='items-list' data-item-id='{{this.key}}'>
    <li class='item flexrow items-header skillset-header' >
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img 
            class='skill-icon'
            src='{{this.icon}}'
            title='{{this.label}}'
            width='30'
            height='30'
          />
        </a>
      </div>
      <div class='item-name'>
        <label>{{localize this.label}}</label>
      </div>
    </li>
    {{#each this.skills as |skill id|}}
      <li class='item flexrow' data-item-id='{{skill._id}}'>
        <div class='item-name'>
          <h4>{{skill.name}}</h4>
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='skill'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='skill'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
    <li class='item flexrow item-controls'>
      <a
        class='item-control-footer item-create'
        title='Create item'
        data-type='skill'
      >
        <i class='fas fa-plus'></i>
      </a>
    </li>
  </ol>
{{/each}}