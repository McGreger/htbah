{{#each skillSets as |skillSet key|}}
  <ol class='items-list' data-item-id='{{this.key}}'>
    <li class='item flexrow items-header skillset-header' >
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img 
            class='skill-icon'
            src='{{icon}}'
            title='{{label}}'
            width='30'
            height='30'
          />
        </a>
      </div>
      <div class='item-name flexcol'>
        <h2 class='resource-label'>{{localize label}}</h2>
        <label>Modifier: {{mod}}</label>
      </div>
      <div class='eureka-points flexcol'>
        <a class='rollable' data-roll-type='item'>
          <img 
            class='skill-icon'
            src='systems/htbah/assets/icons/brainstorm.svg'
            title='{{label}}'
            width='20'
            height='20'
          />
        </a>
        <div class="flexrow">
          <input
            type="number"
            name="system.skillSets.eureka.{{this.key}}.value"
            value="{{eureka.value}}"
            min="0"
          />
          <label>/ {{eureka.total}}</label>
        </div>
      </div>
    </li>
    {{#each this.skills as |skill id|}}
      <li class='item flexrow' data-item-id='{{skill._id}}'>
        <div class='item-name'>
          <h4>{{skill.name}}</h4>
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='skill'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='skill'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
    <li class='item-controls'>
      <a
        class='item-control-footer item-create'
        title='Create item'
        data-type='skill'
      >
        <i class='fas fa-plus'></i>
      </a>
    </li>
  </ol>
{{/each}}