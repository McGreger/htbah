{{#each skillSets as |skillSet key|}}
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>
        <label>{{localize this.label}}</label>
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-create'
          title='Create item'
          data-type='skill'
        >
          <i class='fas fa-plus'></i>
        </a>
      </div>
    </li>
    {{#each this.skills as |skill id|}}
      <li class='item flexrow' data-item-id='{{skill._id}}'>
        <div class='item-name'>
          <h4>{{skill.name}}</h4>
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='skill'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='skill'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
  </ol>
{{/each}}